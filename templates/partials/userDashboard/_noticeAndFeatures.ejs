<div class="noticeAndFeatures sm:mx-9 flex sm:flex-row flex-col">
  <!-- <div class="noticeAndFeatures sm:mx-9 grid grid-cols-1 sm:grid-cols-2"> -->
  <!-- Notice board -->

  <div class="container mx-auto mt-8 px-4 sm:w-7/12 w-10/12">
    <h2 class="text-3xl font-semibold mb-4">Notice Board</h2>

    <%- console.log(allNotices); %> <% allNotices.forEach(notice => { %> <%
    const colors = ["text-fuchsia-600", "text-orange-600", "text-yellow-600",
    "text-blue-600", "text-green-600", "text-red-600"]; %> <% const randomColor
    = colors[Math.floor(Math.random() * colors.length)]; %>

    <div class="bg-white shadow-md rounded-lg p-4 mb-4">
      <h3 class="text-xl font-semibold mb-2 <%= randomColor %>">
        <%= notice.title %>
      </h3>
      <p class="text-gray-600 wrapThis"><%= notice.content %></p>
    </div>
    <% }); %>
  </div>

  <!-- features -->

