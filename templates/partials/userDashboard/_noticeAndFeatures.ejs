        <!-- Club House Booking Section -->
        <div class="rounded-lg shadow p-4 relative overflow-hidden">
          <!-- Add the icon -->
          <img
            src="resources/clubhouse.png"
            alt="Icon"
            class="absolute bottom-0 right-0 z-0 sm:h-44 h-36 opacity-20"
          />

          <!-- Add content for Rules and Regulations section here -->
          <div class="z-10">
            <h3 class="text-xl font-semibold mb-2">Notices</h3>
            <p>
              Find all the notices that are important for you to know about.
            </p>
            <a href="/allNotices">
            <button
              class="mt-2 px-4 py-2 bg-green-500 hover:bg-green-600 text-white font-semibold rounded"
